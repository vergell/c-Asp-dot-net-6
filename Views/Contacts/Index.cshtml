@model IEnumerable<Contacts>
@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Contact List</h2>
    </div>
    <div class="col-4 text-end">
        <a asp-controller="Contacts" asp-action="Create" class="btn btn-success" >
            <i class="bi bi-plus-circle"></i> &nbsp; Add Contacts
        </a>
    </div>
</div>
<br />

<form class=" w-50 d-flex" asp-action="Index" method="get">
    <input class="form-control me-sm-2" type="search" placeholder="Search" name="SearchString" value="@ViewData["currentFilter"]" />
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
</form>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Number</th>
            <th scope="col">Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.FirstName
                </td>
                <td>
                    @obj.LastName
                </td>
                <td>
                    @obj.Phone
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            <i>Edit</i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                            <i>Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>
